<Window x:Class="DB2FAtest.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB2FAtest"
        mc:Ignorable="d"
        Title="LoginWindow" Height="179" Width="259">
    <Grid>
        <TextBox x:Name="usernameTextBox" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,26,10,0" TabIndex="0"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="10,0,0,10" Click="button_Click" TabIndex="2" IsDefault="True"/>
        <PasswordBox x:Name="passwordBox" Margin="10,72,10,0" VerticalAlignment="Top" TabIndex="1"/>
        <Button x:Name="button2" Content="Register" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Click="button2_Click" TabIndex="3" Height="20" VerticalAlignment="Bottom"/>
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Password" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
